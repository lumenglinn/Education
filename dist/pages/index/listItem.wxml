<block wx:if="{{$taroCompReady}}">
    <view>
        <block>
            <block wx:if="{{imgsArr.length === 1}}">
                <view class="recomm-item dis-flex" bindtap="handleClick" data-e-tap-so="this" data-e-tap-a-a="{{data.url}}">
                    <view class="item-info">
                        <view class="item-name">{{data.title}}</view>
                        <view class="item-resource">{{data.source}} {{data.createTime}}</view>
                    </view>
                    <image class="item-img" src="{{newImgs[0]}}"></image>
                </view>
            </block>
            <block wx:elif="{{imgsArr.length > 1}}">
                <view class="recomm-item" bindtap="handleClick" data-e-tap-so="this" data-e-tap-a-a="{{data.url}}">
                    <view class="item-name">{{data.title}}</view>
                    <view class="imgs-group">
                        <image class="item-img" src="{{imgItem.$original}}" wx:key="$loopState__temp2" wx:for="{{loopArray2}}" wx:for-item="imgItem" wx:for-index="j"></image>
                    </view>
                    <view class="item-resource">{{data.source}} {{data.createTime}}</view>
                </view>
            </block>
            <block wx:else>
                <view class="recomm-item" bindtap="handleClick" data-e-tap-so="this" data-e-tap-a-a="{{data.url}}">
                    <view class="item-name">{{data.title}}</view>
                    <view class="item-resource">{{data.source}} {{data.createTime}}</view>
                </view>
            </block>
        </block>
    </view>
</block>